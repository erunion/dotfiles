[user]
	email = jon@ursenba.ch
	name = Jon Ursenbach
[github]
	user = erunion
[core]
	excludesfile = ~/.gitignore_global
[alias]
	all = add -A
	amend = commit --amend
	ci = commit
	co = checkout
	diffs = diff --staged
	info = !sh -c '~/bin/git-info'
	xtags = for-each-ref refs/tags --format='%(refname:short) (%(taggerdate))' --sort=-taggerdate --count
	logs = log --stat --decorate
	pop = stash pop
	pushtag = push origin master
	pushtags = push origin master --tags
	pushup = push origin master
	st = status
	unstage = reset HEAD
	up = !sh -c '~/bin/git-up'
	whichtag = tag --contains
	whichbranch = branch --contains
	wtf = !sh -c '~/bin/git-wtf --all-commits --long --all'
[branch]
	autosetuprebase = always
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
