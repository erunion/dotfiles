{
    "[bash]": {
        "editor.rulers": [80]
    },
    "[css]": {
        "editor.rulers": [100],
        "editor.tabSize": 2
    },
    "[diff]": {
        "editor.rulers": [80, 100]
    },
    "[go]": {
        "editor.rulers": [120]
    },
    "[javascript]": {
        "editor.rulers": [100, 120],
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.rulers": [100, 120],
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.rulers": [100, 120],
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.rulers": [100, 120],
        "editor.tabSize": 2
    },
    "[makefile]": {
        "editor.rulers": [100, 120]
    },
    "[markdown]": {
        "editor.rulers": [80, 100, 120],
        "editor.tabSize": 2
    },
    "[php]": {
        "editor.rulers": [120],
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.rulers": [88],
        "editor.tabSize": 4
    },
    "[scss]": {
        "editor.rulers": [100],
        "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.rulers": [100],
    },
    "[yaml]": {
        "editor.rulers": [100, 120],
        "editor.tabSize": 2
    },
    "editor.fontLigatures": true,
    "editor.fontSize": 14.5,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on",
    "eslint.alwaysShowStatus": true,
    "explorer.autoReveal": false,
    "files.associations": {
        "*.deploy": "dockerfile"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "php.suggest.basic": false,
    "php.validate.executablePath": "/usr/local/opt/php@7.3/bin/php",
    "window.title": "${activeEditorMedium}${separator}${folderPath}",
    "workbench.colorTheme": "GitHub Plus",
    "workbench.iconTheme": "simple-icons",
    "editor.fontFamily": "Hack, 'Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
    "workbench.tree.indent": 4,
    "problems.showCurrentInStatus": true,
    "explorer.compactFolders": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "search.exclude": {
        "**/dist": true
    },
    "typescript.disableAutomaticTypeAcquisition": true,
    "editor.largeFileOptimizations": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.welcomePage.hiddenCategories": [
        "Beginner",
        "Setup"
    ],
}
